<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/transaction_recycle_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cat_food"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/transaction_recycle_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/transaction_recycle_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_5000"
            android:textColor="@color/textMain"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/transaction_recycle_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd mm yy"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>